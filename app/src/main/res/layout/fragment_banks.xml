<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BanksFragment"
    tools:ignore="ExtraText"
    android:background="@drawable/bckgrnd">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:src="@drawable/new_logo_1"
        android:background="@drawable/circular_background" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5dp"
        android:gravity="left"
        android:layout_toEndOf="@+id/logo"
        android:text="Banks"
        android:textColor="@color/white"
        android:textSize="45dp"
        android:textStyle="bold"
        android:paddingHorizontal="20dp"/>

    <ImageView
        android:id="@+id/btnLogOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_logout_24"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="25dp"
        android:layout_marginTop="40dp" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:background="#EBECFD"
        android:padding="2dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/searchView"
        android:layout_marginTop="-1dp"
        android:background="@color/white"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/backImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/searchView"
                android:layout_marginTop="10dp"
                android:alpha="0.5"
                android:scaleType="fitXY"
                android:src="@drawable/img1"
                tools:ignore="NotSibling" />

            <TextView
                android:id="@+id/subTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/backImage"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:background="@drawable/border"
                android:padding="30dp"
                android:text="Discover the competitive rates offered by various banks.\nChoose your preferred bank from the impressive list below!"
                android:textAlignment="center"
                android:textColor="#FF3700B3"
                android:textSize="20sp"
                android:textStyle="bold|italic" />


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/subTitle"
                android:background="#FCFFFFFF"
                android:backgroundTint="#E0F0F1"
                android:columnCount="2"
                android:orientation="horizontal"
                android:padding="16dp"
                android:rowCount="3">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btnBank1"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:scaleType="fitXY"
                    android:src="@drawable/sampath" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btnBank2"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:scaleType="fitXY"
                    android:src="@drawable/com_bank1" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btnBank3"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:scaleType="fitXY"
                    android:src="@drawable/bank_of_ceylon" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btnBank4"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:scaleType="fitXY"
                    android:src="@drawable/peoples" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btnBank5"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:scaleType="fitXY"
                    android:src="@drawable/dfcc" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btnBank6"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:scaleType="fitXY"
                    android:src="@drawable/nsb_logo" />

            </GridLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
